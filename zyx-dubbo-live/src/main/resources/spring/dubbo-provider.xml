<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
            http://www.springframework.org/schema/beans/spring-beans.xsd  
            http://code.alibabatech.com/schema/dubbo  
            http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="live" />

	<!-- 使用zookeeper注册中心暴露服务地址 -->
	<dubbo:registry protocol="zookeeper" address="112.74.78.74:2182" />

	<!-- 用dubbo协议在20880端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="20882" />
		
	<!-- 用户服务接口 -->
	<dubbo:service interface="com.zyx.rpc.live.LiveInfoFacade" ref="liveInfoFacade" />
	<dubbo:service interface="com.zyx.rpc.live.TextLiveItemFacade" ref="textLiveItemFacade" />
	<dubbo:service interface="com.zyx.rpc.live.BarrageFacade" ref="barrageFacade" />
	
</beans>  