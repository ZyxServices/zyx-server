<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd  
            http://code.alibabatech.com/schema/dubbo  
            http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="accountService"/>

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="112.74.78.74:2182"/>

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20885"/>

    <!-- 短信发送接口 -->
    <dubbo:service interface="com.zyx.rpc.account.AccountCommonFacade" ref="accountCommonFacade"/>

    <!-- 用户服务接口 -->
    <dubbo:service interface="com.zyx.rpc.account.AccountInfoFacade" ref="accountInfoFacade"/>

    <dubbo:service interface="com.zyx.rpc.account.RegisterFacade" ref="registerFacade"/>

    <dubbo:service interface="com.zyx.rpc.account.UserLoginFacade" ref="userLoginFacade"/>

    <!-- 用户签到接口 -->
    <dubbo:service interface="com.zyx.rpc.account.MarkFacade" ref="markFacade"/>

    <!-- 用户地址接口 -->
    <dubbo:service interface="com.zyx.rpc.account.AccountAddressFacade" ref="accountAddressFacade"/>

</beans>