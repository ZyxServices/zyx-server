		<id column="bgmUrl" property="bgmUrl" />
	</resultMap>
	
	<insert id="insert" parameterType="LiveInfo" keyProperty="id" useGeneratedKeys="true">
		insert into <include refid="liveInfo"/>(type,start,end,userId,title,lab,bgmUrl)
		values (#{type},#{start},#{end},#{userId},#{title},#{lab},#{bgmUrl})
	</insert>
	
