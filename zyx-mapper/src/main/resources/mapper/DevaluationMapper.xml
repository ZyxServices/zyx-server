<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyx.mapper.activity.DevaluationMapper">

    <resultMap id="devaluation" type="com.zyx.entity.Devaluation">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="types" property="types" jdbcType="INTEGER"/>
        <result column="devaluation_id" property="devaluationId" jdbcType="INTEGER"/>
    </resultMap>

    <delete id="deleteDevaluation" parameterType="com.zyx.entity.Devaluation">
        DELETE FROM devaluation WHERE types = ${types} AND devaluationId = ${devaluationId}
    </delete>

    <select id="queryDevaluation" parameterType="java.lang.Integer" resultMap="devaluation">
        select * from devaluation where types = #{types} ORDER BY create_time desc
    </select>
    <select id="queryDevaIds" parameterType="java.lang.Integer" resultType="java.lang.Integer">
        select devaluation_id from devaluation where types = #{types} ORDER BY create_time desc
    </select>

    <select id="queryDevaluationByDevaId" resultMap="devaluation">
        select * from devaluation where types = #{0} and devaluation_id = #{1} ORDER BY create_time desc
    </select>

</mapper>