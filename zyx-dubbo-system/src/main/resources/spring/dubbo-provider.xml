<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd  
            http://code.alibabatech.com/schema/dubbo  
            http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="system"/>

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <!--<dubbo:registry protocol="zookeeper" address="211.157.152.200:2181"/>-->
    <dubbo:registry protocol="zookeeper" address="192.168.1.200:2181" />
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20887" threads="200"/>

    <!-- 用户服务接口 -->
    <dubbo:service interface="com.zyx.rpc.system.DevaFacade" ref="devaFacade" timeout="10000"/>
    <dubbo:service interface="com.zyx.rpc.system.SearchFacade" ref="searchFacade" timeout="10000"/>
    <dubbo:service interface="com.zyx.rpc.system.CommentFacade" ref="commentFacade" timeout="10000"/>
    <dubbo:service interface="com.zyx.rpc.system.ReplyFacade" ref="replyFacade" timeout="10000"/>
    <dubbo:service interface="com.zyx.rpc.system.MsgFacade" ref="msgFacade" timeout="10000"/>
</beans>